# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Indentation style
indent_style = space
# Size of an indent
indent_size = 2
# Insert final new line at end of file
insert_final_newline = true
# Trim trailing whitespace
trim_trailing_whitespace = true
# Charset
charset = utf-8
# End of line
end_of_line = lf
# Ensure all files use Unix-style line endings
max_line_length = 100

# React files
[*.{js,jsx,ts,tsx}]
# Use the same settings as general files
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
# Use 4 spaces for markdown files for better readability
indent_size = 4

# CSS and SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# YAML files
[*.yaml]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2
